<beans:beans xmlns="http://www.springframework.org/schema/security"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:beans="http://www.springframework.org/schema/beans"
xsi:schemaLocation="http://www.springframework.org/schema/security
http://www.springframework.org/schema/security/spring-security.xsd
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">

<http auto-config="true" use-expressions="true">
<!-- <intercept-url pattern="/users/list" access="hasRole('ROLE_ADMIN')"/> -->

	<intercept-url pattern="/auth/listAdmin" access="hasRole('ROLE_ADMIN')"/> 
	
	<intercept-url pattern="/auth/listUser" access="hasRole('ROLE_USER')"/> 
	
	<form-login authentication-failure-url="/auth/no" default-target-url="/auth/yes" always-use-default-target="true"/>


	<!-- <custom-filter position="CONCURRENT_SESSION_FILTER" ref="customConcurrencyFilter" />  -->
	
	
	
	
</http>



	<authentication-manager>
		<authentication-provider>
			<user-service>
				<user name="john" password="doe" authorities="ROLE_USER"/>
				<user name="jane" password="doe" authorities="ROLE_USER,ROLE_ADMIN"/>
				<user name="admin" password="admin" authorities="ROLE_ADMIN"/>
			</user-service>
		</authentication-provider>
	</authentication-manager>

	<!-- <beans:bean id="customConcurrencyFilter" class="it.cer.filter.MyFilter"/> -->
	
</beans:beans>